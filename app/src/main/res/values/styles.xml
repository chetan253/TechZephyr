<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F1433C</item>
        <item name="colorPrimaryDark">#D03033</item>
        <item name="colorAccent">#02A8F3</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AboutLink" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#02A8F3</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">#9E9E9E</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">#00B8D4</item>
        <item name="colorControlNormal">#00B8D4</item>
        <item name="colorControlActivated">#F44336</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme"></style>

</resources>
