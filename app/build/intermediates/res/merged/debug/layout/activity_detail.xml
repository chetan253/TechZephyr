<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tzltce.techzephyr.DetailActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                android:layout_gravity="center"
                card_view:cardElevation="6.5dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/headNameTxtHeader"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_vertical"
                        android:text="Event Head"
                        android:textSize="25sp"
                        android:textColor="#9C27B0"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/divider"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="@android:color/darker_gray"
                        android:layout_below="@+id/headNameTxtHeader" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/headNameTxtData"
                        android:text="Head Name"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="25sp"
                        android:layout_below="@+id/divider"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contactbutton"
                        android:text="CONTACT"
                        android:background="?android:attr/selectableItemBackground"
                        android:textSize="20sp"
                        android:textColor="#F44336"
                        android:layout_below="@+id/headNameTxtData"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignRight="@+id/divider"
                        android:layout_alignEnd="@+id/divider" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                android:layout_gravity="center"
                card_view:cardElevation="6.5dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fees"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_vertical"
                        android:text="Fees"
                        android:textSize="25sp"
                        android:textColor="#9C27B0"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/divider1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="@android:color/darker_gray"
                        android:layout_below="@+id/fees" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/feesamounttxt"
                        android:text="Fees Amount"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="25sp"
                        android:layout_below="@+id/divider1"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                android:layout_gravity="center"
                card_view:cardElevation="6.5dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/award"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_vertical"
                        android:text="Award Worth"
                        android:textSize="25sp"
                        android:textColor="#9C27B0"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/divider2"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="@android:color/darker_gray"
                        android:layout_below="@+id/award" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/awardtxt"
                        android:text="Awards or Certification"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="25sp"
                        android:layout_below="@+id/divider2"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                android:layout_gravity="center"
                card_view:cardElevation="6.5dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/descriptiondetail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_vertical"
                        android:text="Event Description"
                        android:textSize="25sp"
                        android:textColor="#9C27B0"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/divider3"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="@android:color/darker_gray"
                        android:layout_below="@+id/descriptiondetail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/descriptiontxt"
                        android:text="DESC DESC DESC"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="25sp"
                        android:layout_below="@+id/divider3"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
